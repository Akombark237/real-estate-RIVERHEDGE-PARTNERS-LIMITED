# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development)
# For production, use: DATABASE_URL=postgresql://user:password@host:port/database
# DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings (add your frontend URL)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Email Settings (for password reset, notifications)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=RIVERHEDGE PARTNERS <noreply@riverhedgepartners.com>

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

